#include <stdio.h>
//求一个整数的二进制中有多少个1;
int count_bit(int a)
{
	int count = 0;
	while (a)
	{
		if (a % 2 == 1)
		{
			count++;
		}
		a /= 2;
	}
	return count;
}
void main()
{
	int a;
	scanf("%d", &a);
	int count=count_bit(a);
	printf("%d\n", count);
}
