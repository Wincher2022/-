//打印第n个斐波那契数列,用循环写。
#include <stdio.h>
int fun(int n)
{
	int a = 1;
	int b = 1;
	int c = 0;
	if (n == 1 || n == 2)
		return 1;
	while(n > 2)
	{
		c = a + b;
		a = b;
		b = c;
		n--;
	}
	return c;
}
void main()
{
	int n;
	scanf("%d", &n);
	printf("=%d", fun(n));
}
________________________________________
求n!用递归思想
#include <stdio.h>
int fun(int n)
{
	if (n > 1)
		return n * fun(n - 1);
	else
		return 1;
}
void main()
{
	int n = 0;
	scanf("%d", &n);
	printf("%d", fun(n));
}
