#include <stdio.h>
//输入四个整数，要求由大至小输出。
void main()
{
	int a, b, c, d;
	int tmp = 0;
	printf("请输入四个整数，用逗号隔开。\n");
	scanf("%d,%d,%d,%d", &a, &b, &c, &d);
	if (a < b)
	{
		tmp = a;
		a = b;
		b = tmp;
	}
	if (a < c)
	{
		tmp = a;
		a = c;
		c = tmp;
	}
	if (a < d)
	{
		tmp = a;
		a = d;
		d = tmp;
	}
	if (b < c)
	{
		tmp = b;
		b = c;
		c = tmp;
	}
	if (b < d)
	{
		tmp = b;
		b = d;
		d = tmp;
	}
	if (c < d)
	{
		tmp = c;
		c = d;
		d = tmp;
	}
	printf("%d %d %d %d", a, b, c, d);
}
